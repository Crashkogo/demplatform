{
  "name": "consultantplus-app",
  "version": "1.0.0",
  "description": "Веб-приложение для управления материалами с иерархией категорий",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:auto": "node restart.js",
    "dev:verbose": "nodemon --verbose server.js",
    "dev:frontend": "echo 'Frontend files are served statically. Make changes and refresh browser.'",
    "https": "npx cross-env SSL_ENABLED=true node server.js",
    "https-dev": "npx cross-env SSL_ENABLED=true nodemon server.js",
    "generate-ssl": "node generate-ssl.js",
    "clean": "if exist uploads rmdir /s /q uploads && mkdir uploads && echo Uploads folder cleaned",
    "db:migrate": "node scripts/migrate.js",
    "db:migrate:force": "node scripts/migrate.js --force",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/reset-db.js",
    "db:status": "node scripts/db-status.js",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:migrate:audit": "node scripts/migrate-add-audit-events.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "migrate:roles": "node scripts/migrate-add-roles.js"
  },
  "keywords": [
    "express",
    "postgresql",
    "sequelize",
    "material-management",
    "vanilla-js"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "path": "^0.12.7",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.0"
  },
  "devDependencies": {
    "axios": "^1.12.2",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10",
    "selfsigned": "^2.4.1"
  }
}
